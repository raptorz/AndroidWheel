<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Wheel">
        <attr format="integer" name="ticks" />
        <attr format="integer" name="numRotations" />
        <attr format="boolean" name="showIndicator" />
        <attr format="boolean" name="bidirection" />
        <attr format="boolean" name="flingEnabled" />
        <attr format="integer" name="margin" />
    </declare-styleable>
    
    <declare-styleable name="WheelRadio">
        <attr format="integer" name="smallTicks" />
        <attr format="integer" name="bigTicks" />
        <attr format="color|reference" name="valueIndicatorColor" />
        <attr format="color|reference" name="bigIndicatorColor" />
        <attr format="color|reference" name="smallIndicatorColor" />
    </declare-styleable>    
</resources>